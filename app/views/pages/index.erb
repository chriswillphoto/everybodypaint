    <header>
      <h3>Welcome to pixd</h3>
      <% if @current_user %>
        <div class="logout">
          <%= link_to "Sign Out of #{@current_user.username}", '/login', :class => "text-center", :method => "delete" %>
        </div>
      <% else %>
        <div class="login">

          <div class="signup">
            <h4>Sign Up</h4>
            <form class="" action="/users" method="post">
              <input type="text" name="user[username]" value="" placeholder='Username'>
              <input type="password" name="user[password]" value="" placeholder='Password'>
              <input type="password" name="user[password_confirmation]" value="" placeholder='Confirm Password'>
              <button>Sign Up</button>
            </form>
          </div>

          <div class="signin">
            <h4>Sign In</h4>
            <form class="" action="/login" method="post">
              <input type="text" name="username" value="" placeholder="Username">
              <input type="password" name="password" value="" placeholder="">
              <button>Sign In</button>
            </form>
          </div>

        </div>
      <% end %>
    </header>

    <div class="queue-box">
      <h6>The queue: </h6>
      <div id="queue">
        <%= $lineup  %>
      </div>
      <button class="movealong">Person up front taking too long?</button>
      <button class="addtolineup">Rejoin The Queue?</button>
    </div>


    <div class="palette">
      <div class="white"></div>
      <div class="red"></div>
      <div class="orange"></div>
      <div class="yellow"></div>
      <div class="green"></div>
      <div class="blue"></div>
      <div class="indigo"></div>
      <div class="violet"></div>
      <div class="black"></div>
    </div>
    <div class="container">
      <% if !@art.data.include? '<script>' %>
        <%= @art.data.html_safe %>
      <% end %>
    </div>



    <% if @current_user %>
      <script class='yes'>
      $(document).ready(function(){
        currentuser = "<%= @current_user.username %>"
        line = "<%= $lineup %>"
      })

      </script>
    <% end %>
